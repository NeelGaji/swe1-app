option_settings:
    aws:elasticbeanstalk:application:environment:
        DJANGO_SETTINGS_MODULE: "myapp.settings"
        # Ensure the inner 'myapp' folder (where manage.py and the project package live)
        # is on the PYTHONPATH so imports resolve when the app is deployed from the repo root.
        PYTHONPATH: "/var/app/current/myapp:/var/app/current:/usr/bin/python"
    aws:elasticbeanstalk:container:python:
        # Use forward slashes and the path relative to the application root.
        WSGIPath: "myapp/wsgi.py"
